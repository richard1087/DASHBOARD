
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm())
{
 <!-- FORM LOGIN START -->
    <form class="form-horizontal form-material" id="loginform" action="/dashboard">
        <h3 class="box-title m-b-20 txt-centerlogin">DASHBOARD GSPORT</h3>

        <div class="imglogo">
            <img src="~/Content/res/assets/images/gsport_500.png" class="img-responsive" style="width:40%; margin-bottom:20px;" />
        </div>

        <div class="form-group ">
            <div>
                <input id="Username" name="Username" type="text" class="inptlogin form-control" placeholder="Username" required="" autocomplete="off" />
            </div>
        </div>
        <div class="form-group">
            <div>
                <input id="Password" name="Password" type="password" class="form-control inptlogin" placeholder="Password" required="" autocomplete="off" />
                <i id="pass-status" class="fa fa-eye" aria-hidden="true" onClick="viewPassword()" style="color:#cd8a3d;text-align: right;position: relative;top: -28px;float: right;font-size: 18px;margin-right: 10px; cursor: pointer;"></i>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <div class="checkbox checkbox-info pull-left p-t-0"></div>
            </div>
        </div>
        <div class="form-group text-center">
            <div class="col-xs-12 p-b-20">
                <button id="loginbtn" name="loginbtn" type="submit" class="btn btn-block btn-lg btn-info btn-rounded btn-lgncstm">Login</button>
            </div>
        </div>
        @if (ViewBag.Error == "0")
        {
        <!-- ALERT START -->
            <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                Password Salah
            </div>
        <!-- ALERT END -->
        }
        else if (ViewBag.Error == "1")
        {
         <!-- ALERT START -->
            <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                Account User Tidak Aktif
            </div>
        <!-- ALERT END -->
        }
        else if (ViewBag.Error == "2")
        {
         <!-- ALERT START -->
            <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                Account User Tidak Terdaftar
            </div>
        <!-- ALERT END -->
        }
        else if (ViewBag.Error == "3")
        {
         <!-- ALERT START -->
            <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                Account Sedang terkunci, Hubungi Administrator!
            </div>
        <!-- ALERT END -->
        }
        else if (ViewBag.Error != null)
        {
        <!-- ALERT START -->
            <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                @ViewBag.Error
            </div>
        <!-- ALERT END -->
        }

    </form>
}
<!-- FORM LOGIN END -->
<!-- FORM RECOVER PASSWORD START -->
<form class="form-horizontal" id="recoverform" action="index.html">
    <div class="form-group ">
        <div class="col-xs-12">
            <h3>Recover Password</h3>
            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
        </div>
    </div>
    <div class="form-group ">
        <div class="col-xs-12">
            <input class="form-control" type="text" required="" placeholder="Email">
        </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
        </div>
    </div>
</form>
<!-- FORM RECOVER PASSWORD END -->